@model Student_Management_DotNet_MVC.Models.AddStudentViewModel



<h1>ADD STUDENT</h1>

<form method="post">

    <div class="mt-3">
        <label class="form-label">Name</label>
        <input class="form-control" type="text" asp-for="Name" />
    </div>
    <div class="mt-3">
        <label class="form-label">Email</label>
        <input class="form-control" type="email" asp-for="Email" />
    </div>
    <div class="mt-3">
        <label class="form-label">Phone</label>
        <input class="form-control" type="text" asp-for="Phone" />
    </div>
    <div class="mt-3">
        <input class="form-check-input" type="checkbox" id="Subscribed" asp-for="Subscribed" />
        <label class="form-check-label" for="Subscribed">Subscribed</label>
    </div>
    <div class="mt-3">
        <button class="btn btn-primary" type="submit">Save</button>
    </div>

</form>